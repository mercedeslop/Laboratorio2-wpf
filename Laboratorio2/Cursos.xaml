<Window x:Class="Laboratorio2.Cursos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio2"
        mc:Ignorable="d"
        Title="Cursos" Height="250" Width="250">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="77*"/>

        </Grid.ColumnDefinitions>

        <TextBlock
                    Grid.ColumnSpan="2"
                   Grid.Column="0"
                   Text="Iniciar Sesion"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Normal" Height="32" Margin="56,0,0,0" Width="138" />
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Usuario:" HorizontalAlignment="Left" Margin="8,0,0,0" Width="50" />
        <TextBox Grid.Row="1" Grid.Column="1" Height="18" Margin="20,0,20,0" VerticalAlignment="Center"/>

        <TextBlock Grid.Row="1" Text="Contraseña:" HorizontalAlignment="Center" Margin="0,58,0,58" Grid.RowSpan="3" Width="74" />
        <TextBox Grid.Row="2" Grid.Column="1" Height="19" Margin="20,0,20,0" VerticalAlignment="Center"/>

        <Button Content="Agregar"
                Grid.Column="0"
                 Grid.ColumnSpan="2"
                Grid.Row="3"
               
                Margin="10,10,10,10"/>



    </Grid>
</Window>
