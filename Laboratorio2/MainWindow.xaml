<Window x:Class="Laboratorio2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Laboratorio2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            
            <Button Content="Click aqui"
                    Click="Button_Click"
                    Background="Red"
                    Width="200"
                    FontSize="20"
                    />
            
            <Button Content="Click aqui"
                    Click="Button_Click_1"
                    Background="Green"
                    
                    Width="200"/>
            <DataGrid x:Name="dgCursos"></DataGrid>
            

            <TextBox x:Name="txtNombres" Margin="30" Padding="5"/>
            <TextBox x:Name="txtApellidos" Margin="30" Padding="5"/>

            <Button Content="Agregar"  Background="Yellow" Width="200" Click="Button_Click_2"/>

            <DataGrid x:Name="dgProfesores"></DataGrid>
        </StackPanel>
    </Grid>
</Window>
